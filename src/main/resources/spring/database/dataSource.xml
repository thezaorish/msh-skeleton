<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
 
	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location">
			<value>properties/database.properties</value>
		</property>
	</bean>
	 
	<bean id="parentDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource" abstract="true">
		<property name="driverClassName" value="${jdbc.driverClassName}" />
		<property name="username" value="${jdbc.username}" />
		<property name="password" value="${jdbc.password}" />	
	</bean>

    <bean id="masterDataSource" parent="parentDataSource">
        <property name="url" value="${jdbc.master.url}" />
    </bean>

    <bean id="replicaDataSource" parent="parentDataSource">
        <property name="url" value="${jdbc.replica.url}" />
    </bean>

    <bean id="dataSource" class="com.bunker.skeleton.dao.CustomDataSource">
        <property name="targetDataSources">
            <map key-type="com.bunker.skeleton.dao.RoutingType">
                <entry key="MASTER" value-ref="masterDataSource"/>
                <entry key="REPLICA" value-ref="replicaDataSource"/>
            </map>
        </property>
        <property name="defaultTargetDataSource" ref="masterDataSource"/>
    </bean>

</beans>